                    android:layout_weight="1">
                    <Button
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent" />
                    <Button
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent" />
                    <Button
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent" />
                </TableRow>
                <TableRow
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_weight="1">
                    <Button
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent" />
                    <Button
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent" />
                    <Button
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent" />
                </TableRow>
                <TableRow
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_weight="1">
                    <Button
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent" />
                    <Button
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent" />
                    <Button
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent" />
                </TableRow>
            </TableLayout>
        </LinearLayout>
    </ScrollView>
