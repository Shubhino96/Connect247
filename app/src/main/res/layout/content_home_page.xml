                    android:layout_weight="1">
                    <Button
                        android:id="@+id/button7"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent" />
                    <Button
                        android:id="@+id/button8"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent" />
                    <Button
                        android:id="@+id/button9"
